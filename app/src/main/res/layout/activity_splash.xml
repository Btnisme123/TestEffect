<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="viewModel"
                  type="com.example.nguyenvulan.framgia.testblureffect.splash.SplashViewModel"/>
    </data>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.nguyenvulan.framgia.testblureffect.splash.SplashActivity">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading Screen"
            android:gravity="bottom"
            android:layout_centerInParent="true"
            android:finish="@{viewModel.isFinished}"/>
    </RelativeLayout>
</layout>
